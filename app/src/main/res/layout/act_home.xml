<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/page_bg">


    <com.linxz.streamlet.common.widget.NoScrollViewPager
        android:layout_weight="1"
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:layout_weight="0"
        android:id="@+id/tab_container"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center_vertical">

        <RadioGroup
            android:id="@+id/rg_container"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rb_index"
                style="@style/home_tab_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:drawablePadding="1dp"
                android:drawableTop="@drawable/rb_index"
                android:text="采购商品"
                android:textColor="@color/tabitem_textcolor_selector"
                android:textSize="11sp" />

            <RadioButton
                android:id="@+id/rb_itmsg"
                style="@style/home_tab_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="false"
                android:drawablePadding="1dp"
                android:drawableTop="@drawable/rb_itmsg"
                android:text="咨询"
                android:textColor="@color/tabitem_textcolor_selector"
                android:textSize="11sp" />

            <RadioButton
                android:id="@+id/rb_msg"
                style="@style/home_tab_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="false"
                android:drawablePadding="1dp"
                android:drawableTop="@drawable/rb_msg"
                android:text="消息"
                android:textColor="@color/tabitem_textcolor_selector"
                android:textSize="11sp" />

            <RadioButton
                android:id="@+id/rb_mine"
                style="@style/home_tab_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="false"
                android:drawablePadding="1dp"
                android:drawableTop="@drawable/rb_mine"
                android:text="我的"
                android:textColor="@color/tabitem_textcolor_selector"
                android:textSize="11sp"
                android:visibility="visible" />
        </RadioGroup>
    </RelativeLayout>

</LinearLayout>
